{
    "compileOnSave": true,
    "compilerOptions": {
      "declaration": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "downlevelIteration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,

      "outDir": "./lib",
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2017", "dom"],
      "types": ["jest", "node"],
    },
    "exclude": ["*node_modules*", "*test*", "*lib*"]
  }